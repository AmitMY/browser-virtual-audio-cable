{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "src/dom.audio-worklet.d.ts"
  ],
  "types": [
    "src/dom.audio-worklet.d.ts"
  ]
}
